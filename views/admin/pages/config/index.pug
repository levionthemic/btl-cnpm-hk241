extends ../../layouts/default.pug
include ../../mixins/alert.pug

block style 
  link(rel="stylesheet", href="/admin/css/config-index.css")

block main 
  +alert-success(5000)
  +alert-error(5000)

  .container-fluid 
    .row.my-4 
      .col-12 
        h2 #{pageTitle} 
    .row 
      .col-12 
        form(
          method="POST"
          action=`${prefixAdmin}/config/update?_method=PATCH`
        )
        table.table.table-hover
          thead 
            tr 
              th STT 
              th Thuộc tính 
              th Giá trị
          tbody.table-group-divider
            tr 
              td 1
              td Số lượng giấy cấp cho SV mỗi kì
              td 
                input(
                  type="number"
                  value=config.defaultPageQuantity
                  min="30"
                  max="80"
                  required
                )
            tr 
              td 2
              td Danh sách kiểu file cho phép in 
              td 
                input(
                  type="text"
                  value=(config.permittedFileTypes.join(", "))
                  required
                )
        div(class="inner-button-config")
          button(
            type="submit"
            class="btn btn-update-config"
          ) Cập nhật
  script.
    const prefixAdmin = "#{prefixAdmin}"

